<div class="p-4 lg:p-6">
    <h1 class="text-2xl lg:text-3xl font-bold text-gray-800 mb-6"><%= title %></h1>

    <!-- Overview Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow-md flex items-center justify-between border border-blue-200">
            <div>
                <p class="text-sm text-gray-600">Total Employees</p>
                <h2 class="text-3xl font-bold text-blue-700"><%= overview.totalEmployees %></h2>
            </div>
            <i class="fas fa-users text-4xl text-blue-500"></i>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md flex items-center justify-between border border-green-200">
            <div>
                <p class="text-sm text-gray-600">Total Departments</p>
                <h2 class="text-3xl font-bold text-green-700"><%= overview.totalDepartments %></h2>
            </div>
            <i class="fas fa-building text-4xl text-green-500"></i>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md flex items-center justify-between border border-yellow-200">
            <div>
                <p class="text-sm text-gray-600">Recent Hires (30 Days)</p>
                <h2 class="text-3xl font-bold text-yellow-700"><%= overview.recentHires %></h2>
            </div>
            <i class="fas fa-user-plus text-4xl text-yellow-500"></i>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md flex items-center justify-between border border-red-200">
            <div>
                <p class="text-sm font-medium text-gray-500">Total Salary Budget</p>
                <h2 class="text-3xl font-bold text-red-700">â‚¹<%= overview.totalSalaryBudget.toLocaleString() %></h2>
            </div>
            <i class="fas fa-dollar-sign text-4xl text-red-500"></i>
        </div>
    </div>

    <!-- Department Statistics and Job Title Distribution -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">Employees by Department</h3>
            <ul class="space-y-3">
                <% departmentStats.forEach(dept => { %>
                    <li class="flex justify-between items-center py-2 px-4 bg-gray-50 rounded-md border border-gray-100">
                        <span class="text-gray-700 font-medium"><%= dept.name %></span>
                        <span class="font-semibold text-indigo-600"><%= dept.employeeCount %> Employees</span>
                    </li>
                <% }); %>
            </ul>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">Employees by Job Title</h3>
            <ul class="space-y-3">
                <% jobTitleStats.forEach(job => { %>
                    <li class="flex justify-between items-center py-2 px-4 bg-gray-50 rounded-md border border-gray-100">
                        <span class="text-gray-700 font-medium"><%= job._id %></span>
                        <span class="font-semibold text-indigo-600"><%= job.count %> Employees</span>
                    </li>
                <% }); %>
            </ul>
        </div>
    </div>

    <!-- Location Distribution -->
    <div class="bg-white p-6 rounded-lg shadow-md mb-8 border border-gray-200">
        <h3 class="text-xl font-semibold text-gray-800 mb-4">Employees by Location (Country)</h3>
        <ul class="space-y-3">
            <% locationStats.forEach(loc => { %>
                <li class="flex justify-between items-center py-2 px-4 bg-gray-50 rounded-md border border-gray-100">
                    <span class="text-gray-700 font-medium"><%= loc._id %></span>
                    <span class="font-semibold text-indigo-600"><%= loc.count %> Employees</span>
                </li>
            <% }); %>
        </ul>
    </div>

    <!-- Hire Trends -->
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
        <h3 class="text-xl font-semibold text-gray-800 mb-4">Hire Trends (Last 12 Months)</h3>
        <p class="text-gray-600 mb-4">This section would typically feature a chart to visualize hiring trends over time.</p>
        <ul class="space-y-3">
            <% hireTrends.forEach(trend => { %>
                <li class="flex justify-between items-center py-2 px-4 bg-gray-50 rounded-md border border-gray-100">
                    <span class="text-gray-700 font-medium"><%= trend._id.month %>/<%= trend._id.year %></span>
                    <span class="font-semibold text-indigo-600"><%= trend.count %> Hires</span>
                </li>
            <% }); %>
        </ul>
    </div>
</div>
