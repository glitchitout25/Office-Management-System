<script>
// Load dashboard statistics
document.addEventListener('DOMContentLoaded', async () => {
    try {
        // Load departments count
        const deptResponse = await fetch('/api/departments');
        if (deptResponse.ok) {
            const deptData = await deptResponse.json();
            document.getElementById('total-departments').textContent = deptData.data.length;
        }

        // Load employees count
        const empResponse = await fetch('/api/employees');
        if (empResponse.ok) {
            const empData = await empResponse.json();
            document.getElementById('total-employees').textContent = empData.pagination.totalEmployees;
        }
    } catch (error) {
        console.error('Error loading dashboard stats:', error);
    }
});
</script>