<div class="p-4 lg:p-6">
    <div class="max-w-xl mx-auto text-center bg-white rounded-lg shadow-md border border-gray-200 p-6 lg:p-8">
        <!-- Error Icon -->
        <div class="mb-8">
            <div class="w-24 h-24 bg-red-100 rounded-full flex items-center justify-center mx-auto">
                <i class="fas fa-exclamation-triangle text-red-600 text-4xl"></i>
            </div>
        </div>
        
        <!-- Error Details -->
        <div class="mb-8">
            <h1 class="text-5xl md:text-6xl font-extrabold text-gray-800 mb-4">
                <%= error.status || 500 %>
            </h1>
            
            <h2 class="text-xl md:text-2xl font-semibold text-gray-700 mb-4">
                <% if (error.status === 404) { %>
                    Page Not Found
                <% } else { %>
                    Something went wrong
                <% } %>
            </h2>
            
            <p class="text-gray-600 mb-8 max-w-md mx-auto text-sm md:text-base">
                <% if (error.status === 404) { %>
                    The page you're looking for doesn't exist or has been moved. Please check the URL or navigate back.
                <% } else { %>
                    We're sorry, but something went wrong on our end. Our team has been notified. Please try again later.
                <% } %>
            </p>
            
            <!-- Error Message (Development Only) -->
            <% if (error.message && process.env.NODE_ENV === 'development') { %>
                <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6 text-left shadow-sm">
                    <h3 class="font-semibold text-red-800 mb-2">Error Details (Development Mode):</h3>
                    <p class="text-sm text-red-700 break-words"><%= error.message %></p>
                    <% if (error.stack) { %>
                        <pre class="text-xs text-red-600 mt-4 whitespace-pre-wrap font-mono bg-red-100 p-2 rounded-sm"><%= error.stack %></pre>
                    <% } %>
                </div>
            <% } %>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-3 justify-center items-center">
            <button onclick="window.history.back()" class="w-full sm:w-auto flex items-center justify-center px-6 py-2.5 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-md transition-colors duration-200 shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                <i class="fas fa-arrow-left mr-2"></i>
                Go Back
            </button>
            
            <a href="/" class="w-full sm:w-auto flex items-center justify-center px-6 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white rounded-md transition-colors duration-200 shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                <i class="fas fa-home mr-2"></i>
                Go Home
            </a>
        </div>
        
        <!-- Help Section -->
        <div class="mt-10 pt-6 border-t border-gray-200">
            <p class="text-sm text-gray-500 mb-4">Need help?</p>
            <div class="flex flex-col sm:flex-row justify-center space-y-2 sm:space-y-0 sm:space-x-6 text-sm">
                <a href="mailto:support@company.com" class="text-indigo-600 hover:text-indigo-800 transition-colors duration-200 flex items-center justify-center">
                    <i class="fas fa-envelope mr-1"></i>
                    Contact Support
                </a>
                <a href="#" class="text-indigo-600 hover:text-indigo-800 transition-colors duration-200 flex items-center justify-center">
                    <i class="fas fa-question-circle mr-1"></i>
                    Help Center
                </a>
                <a href="#" class="text-indigo-600 hover:text-indigo-800 transition-colors duration-200 flex items-center justify-center">
                    <i class="fas fa-bug mr-1"></i>
                    Report Bug
                </a>
            </div>
        </div>
    </div>
</div>

<script>
// Auto-redirect to home after 30 seconds for 500 errors (optional)
<% if (error.status === 500) { %>
    setTimeout(() => {
        if (confirm('This page will automatically redirect to the home page. Do you want to stay here?')) {
            // User chose to stay
        } else {
            window.location.href = '/';
        }
    }, 30000);
<% } %>

// Report error to analytics (if implemented)
if (typeof gtag !== 'undefined') {
    gtag('event', 'exception', {
        'description': '<%= error.message || "Unknown error" %>',
        'fatal': <%= error.status === 500 ? 'true' : 'false' %>
    });
}
</script>
