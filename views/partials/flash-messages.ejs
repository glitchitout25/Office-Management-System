<!-- Flash Messages -->
<% if (success_msg && success_msg.length > 0) { %>
    <div class="mx-4 mt-4 lg:mx-6 p-4 bg-green-100 border border-green-300 text-green-800 rounded-md shadow-sm">
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <i class="fas fa-check-circle text-green-600 mr-3 text-lg"></i>
                <p class="text-sm font-medium"><%= success_msg %></p>
            </div>
            <button type="button" class="text-green-600 hover:text-green-800 focus:outline-none focus:ring-2 focus:ring-green-500 rounded-md p-1" onclick="this.closest('div.shadow-sm').remove()">
                <i class="fas fa-times text-sm"></i>
            </button>
        </div>
    </div>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
    <div class="mx-4 mt-4 lg:mx-6 p-4 bg-red-100 border border-red-300 text-red-800 rounded-md shadow-sm">
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <i class="fas fa-exclamation-circle text-red-600 mr-3 text-lg"></i>
                <p class="text-sm font-medium"><%= error_msg %></p>
            </div>
            <button type="button" class="text-red-600 hover:text-red-800 focus:outline-none focus:ring-2 focus:ring-red-500 rounded-md p-1" onclick="this.closest('div.shadow-sm').remove()">
                <i class="fas fa-times text-sm"></i>
            </button>
        </div>
    </div>
<% } %>

<% if (error && error.length > 0) { %>
    <div class="mx-4 mt-4 lg:mx-6 p-4 bg-red-100 border border-red-300 text-red-800 rounded-md shadow-sm">
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <i class="fas fa-exclamation-circle text-red-600 mr-3 text-lg"></i>
                <p class="text-sm font-medium"><%= error %></p>
            </div>
            <button type="button" class="text-red-600 hover:text-red-800 focus:outline-none focus:ring-2 focus:ring-red-500 rounded-md p-1" onclick="this.closest('div.shadow-sm').remove()">
                    <i class="fas fa-times text-sm"></i>
            </button>
        </div>
    </div>
<% } %>