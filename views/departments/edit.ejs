<div class="">
    <!-- Header Section -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Edit Department</h1>
            <p class="text-gray-600">Modify department details</p>
        </div>
        <a href="/departments" class="text-gray-600 hover:text-gray-900 flex items-center transition-colors duration-200">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to Departments
        </a>
    </div>
    
    <!-- Form -->
    <div class="bg-white rounded-lg shadow border border-gray-200">
        <div class="p-6">
            <form action="/departments/<%= department._id %>?_method=PUT" method="POST" data-validate="true">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Department Name -->
                    <div class="md:col-span-2">
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                            Department Name <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="text" 
                            id="name" 
                            name="name" 
                            required
                            maxlength="100"
                            value="<%= department.name %>"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
                            placeholder="e.g. Engineering, Marketing, Sales"
                        >
                    </div>
                    
                    <!-- Description -->
                    <div class="md:col-span-2">
                        <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                            Description
                        </label>
                        <textarea 
                            id="description" 
                            name="description" 
                            rows="4"
                            maxlength="500"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
                            placeholder="Describe the department's role and responsibilities..."
                        ><%= department.description %></textarea>
                        <p class="text-sm text-gray-500 mt-1">Optional - Maximum 500 characters</p>
                    </div>
                    
                    <!-- Budget -->
                    <div>
                        <label for="budget" class="block text-sm font-medium text-gray-700 mb-2">
                            Budget (â‚¹)
                        </label>
                        <input 
                            type="number" 
                            id="budget" 
                            name="budget" 
                            min="0"
                            step="0.01"
                            value="<%= department.budget %>"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
                            placeholder="0.00"
                        >
                        <p class="text-sm text-gray-500 mt-1">Optional - Annual budget allocation</p>
                    </div>
                    
                    <!-- Head of Department -->
                    <div>
                        <label for="headOfDepartment" class="block text-sm font-medium text-gray-700 mb-2">
                            Head of Department
                        </label>
                        <select 
                            id="headOfDepartment" 
                            name="headOfDepartment"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
                        >
                            <option value="">Select an employee...</option>
                            <% if (employees && employees.length > 0) { %>
                                <% employees.forEach(employee => { %>
                                    <option value="<%= employee._id %>" <%= department.headOfDepartment && department.headOfDepartment.toString() === employee._id.toString() ? 'selected' : '' %>>
                                        <%= employee.firstName %> <%= employee.lastName %>
                                    </option>
                                <% }); %>
                            <% } %>
                        </select>
                        <p class="text-sm text-gray-500 mt-1">Optional - Assign a department head</p>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="mt-8 flex items-center justify-end space-x-4">
                    <a href="/departments" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200">
                        Cancel
                    </a>
                    <button type="submit" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors duration-200 flex items-center">
                        <i class="fas fa-save mr-2"></i>
                        Update Department
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/main.js"></script>