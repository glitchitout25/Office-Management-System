<div class="p-4 lg:p-6">
    <!-- Header Section -->
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between mb-6 lg:mb-8">
        <div>
            <h1 class="text-2xl lg:text-3xl font-bold text-gray-800">Department Performance</h1>
            <p class="text-gray-600 mt-1">Budget utilization, growth trends, and department analytics</p>
        </div>
        <a href="/reports" class="mt-4 sm:mt-0 text-indigo-600 hover:text-indigo-800 flex items-center transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 rounded-md p-1">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to Reports
        </a>
    </div>
    
    <!-- Department Performance Overview -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 mb-8 overflow-hidden">
        <h3 class="text-xl font-semibold text-gray-800 mb-4">Department Performance Overview</h3>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Department</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Budget</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actual Salary</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Utilization</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employees</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Avg Salary</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% departmentPerformance.forEach(dept => { %>
                    <tr class="hover:bg-gray-50 transition-colors duration-150">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= dept.name %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">₹<%= dept.budget ? dept.budget.toLocaleString() : '0' %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">₹<%= dept.totalSalary ? dept.totalSalary.toLocaleString() : '0' %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            <% if (dept.budgetUtilization > 100) { %>
                                <span class="text-red-600 font-medium"><%= Math.round(dept.budgetUtilization) %>%</span>
                            <% } else if (dept.budgetUtilization > 80) { %>
                                <span class="text-yellow-600 font-medium"><%= Math.round(dept.budgetUtilization) %>%</span>
                            <% } else { %>
                                <span class="text-green-600 font-medium"><%= Math.round(dept.budgetUtilization) %>%</span>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= dept.employeeCount %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">₹<%= Math.round(dept.avgSalary || 0).toLocaleString() %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Budget Utilization Chart -->
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Budget Utilization by Department</h3>
            <div class="relative h-72">
                <canvas id="budgetUtilizationChart"></canvas>
            </div>
        </div>
        
        <!-- Department Growth Chart -->
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Recent Hires by Department (6 months)</h3>
            <div class="relative h-72">
                <canvas id="departmentGrowthChart"></canvas>
            </div>
        </div>
    </div>
    
    <!-- Department Heads Section -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 mb-8">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Department Leadership</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% departmentHeads.forEach(dept => { %>
            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-lg transition-shadow duration-200">
                <div class="flex items-center mb-3">
                    <div class="w-10 h-10 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                        <i class="fas fa-user-tie text-lg"></i>
                    </div>
                    <div>
                        <h4 class="font-medium text-gray-900"><%= dept.name %></h4>
                        <p class="text-sm text-gray-600">Department Head</p>
                    </div>
                </div>
                <div class="space-y-2 text-sm">
                    <p class="text-gray-700">
                        <span class="font-medium text-gray-800">Name:</span> 
                        <%= dept.headOfDepartment.firstName %> <%= dept.headOfDepartment.lastName %>
                    </p>
                    <p class="text-gray-700">
                        <span class="font-medium text-gray-800">Title:</span> 
                        <%= dept.headOfDepartment.jobTitle %>
                    </p>
                    <p class="text-gray-700">
                        <span class="font-medium text-gray-800">Salary:</span> 
                        ₹<%= dept.headOfDepartment.salary.toLocaleString() %>
                    </p>
                    <p class="text-gray-700">
                        <span class="font-medium text-gray-800">Budget:</span> 
                        ₹<%= dept.budget ? dept.budget.toLocaleString() : '0' %>
                    </p>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
    
    <!-- Department Growth Analysis -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
        <h3 class="text-xl font-semibold text-gray-800 mb-4">Department Growth Analysis</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% departmentGrowth.forEach(dept => { %>
            <div class="border border-gray-200 rounded-lg p-4 hover:shadow-lg transition-shadow duration-200">
                <div class="flex items-center justify-between mb-2">
                    <h4 class="font-medium text-gray-900"><%= dept.name %></h4>
                    <span class="text-2xl font-bold text-indigo-600"><%= dept.recentHires %></span>
                </div>
                <p class="text-sm text-gray-600">New hires in last 6 months</p>
                <div class="mt-3">
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="bg-indigo-600 h-2 rounded-full" style="width: <%= Math.min((dept.recentHires / Math.max(...departmentGrowth.map(d => d.recentHires))) * 100, 100) %>%"></div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/main.js"></script>

<script>
    // Budget Utilization Chart
    const budgetUtilizationCtx = document.getElementById('budgetUtilizationChart').getContext('2d');
    new Chart(budgetUtilizationCtx, {
        type: 'bar',
        data: {
            labels: [<% departmentPerformance.forEach((dept, index) => { %>'<%= dept.name %>'<%= index < departmentPerformance.length - 1 ? ',' : '' %><% }); %>],
            datasets: [{
                label: 'Budget Utilization (%)',
                data: [<% departmentPerformance.forEach((dept, index) => { %><%= Math.round(dept.budgetUtilization) %><%= index < departmentPerformance.length - 1 ? ',' : '' %><% }); %>],
                backgroundColor: function(context) {
                    const value = context.parsed.y;
                    if (value > 100) return '#EF4444'; // Red for over budget
                    if (value > 80) return '#F59E0B'; // Yellow for approaching budget
                    return '#10B981'; // Green for within budget
                }
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    max: 120 // Cap Y-axis for better visualization
                }
            },
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });
    
    // Department Growth Chart
    const departmentGrowthCtx = document.getElementById('departmentGrowthChart').getContext('2d');
    new Chart(departmentGrowthCtx, {
        type: 'bar',
        data: {
            labels: [<% departmentGrowth.forEach((dept, index) => { %>'<%= dept.name %>'<%= index < departmentGrowth.length - 1 ? ',' : '' %><% }); %>],
            datasets: [{
                label: 'Recent Hires',
                data: [<% departmentGrowth.forEach((dept, index) => { %><%= dept.recentHires %><%= index < departmentGrowth.length - 1 ? ',' : '' %><% }); %>],
                backgroundColor: '#3B82F6'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });
</script>
