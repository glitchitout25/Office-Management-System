<div class="p-4 lg:p-6">
    <!-- Header Section -->
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between mb-6 lg:mb-8">
        <div>
            <h1 class="text-2xl lg:text-3xl font-bold text-gray-800">Employee Analytics</h1>
            <p class="text-gray-600 mt-1">Comprehensive employee data analysis and insights</p>
        </div>
        <a href="/reports" class="mt-4 sm:mt-0 text-indigo-600 hover:text-indigo-800 flex items-center transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 rounded-md p-1">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to Reports
        </a>
    </div>
    
    <!-- Salary Statistics Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 hover:shadow-lg transition-shadow duration-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-green-100 text-green-600">
                    <i class="fas fa-dollar-sign text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Average Salary</p>
                    <p class="text-2xl font-bold text-gray-900">₹<%= salaryStats.avgSalary ? Math.round(salaryStats.avgSalary).toLocaleString() : '0' %></p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 hover:shadow-lg transition-shadow duration-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                    <i class="fas fa-arrow-up text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Highest Salary</p>
                    <p class="text-2xl font-bold text-gray-900">₹<%= salaryStats.maxSalary ? salaryStats.maxSalary.toLocaleString() : '0' %></p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 hover:shadow-lg transition-shadow duration-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
                    <i class="fas fa-arrow-down text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Lowest Salary</p>
                    <p class="text-2xl font-bold text-gray-900">₹<%= salaryStats.minSalary ? salaryStats.minSalary.toLocaleString() : '0' %></p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 hover:shadow-lg transition-shadow duration-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-purple-100 text-purple-600">
                    <i class="fas fa-calculator text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-600">Total Salary Cost</p>
                    <p class="text-2xl font-bold text-gray-900">₹<%= salaryStats.totalSalary ? salaryStats.totalSalary.toLocaleString() : '0' %></p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Salary Distribution -->
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Salary Distribution by Range</h3>
            <div class="relative h-72">
                <canvas id="salaryRangeChart"></canvas>
            </div>
        </div>
        
        <!-- Department Salary Comparison -->
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Average Salary by Department</h3>
            <div class="relative h-72">
                <canvas id="departmentSalaryChart"></canvas>
            </div>
        </div>
    </div>
    
    <!-- Experience Analysis -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Experience Distribution -->
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Experience Distribution</h3>
            <div class="relative h-72">
                <canvas id="experienceChart"></canvas>
            </div>
        </div>
        
        <!-- Top Earners -->
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Top 10 Earners</h3>
            <div class="space-y-3">
                <% topEarners.forEach((employee, index) => { %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border border-gray-100">
                    <div class="flex items-center">
                        <div class="w-8 h-8 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-sm font-medium mr-3">
                            <%= index + 1 %>
                        </div>
                        <div>
                            <p class="font-medium text-gray-900"><%= employee.firstName %> <%= employee.lastName %></p>
                            <p class="text-sm text-gray-600"><%= employee.jobTitle %></p>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="font-medium text-gray-900">₹<%= employee.salary.toLocaleString() %></p>
                        <p class="text-sm text-gray-600"><%= employee.department ? employee.department.name : 'N/A' %></p>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
    
    <!-- Data Tables -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Salary by Job Title -->
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Salary Analysis by Job Title</h3>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Job Title</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Count</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Avg Salary</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% salaryByJobTitle.slice(0, 10).forEach(job => { %>
                        <tr class="hover:bg-gray-50 transition-colors duration-150">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= job._id %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= job.count %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">₹<%= Math.round(job.avgSalary).toLocaleString() %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Department Distribution -->
        <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Department Employee Distribution</h3>
            <div class="space-y-3">
                <% departmentDistribution.forEach(dept => { %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border border-gray-100">
                    <div>
                        <p class="font-medium text-gray-900"><%= dept.name %></p>
                        <p class="text-sm text-gray-600"><%= dept.employeeCount %> employees</p>
                    </div>
                    <div class="text-right">
                        <p class="font-medium text-gray-900">₹<%= Math.round(dept.avgSalary || 0).toLocaleString() %></p>
                        <p class="text-sm text-gray-600">avg salary</p>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/main.js"></script>

<script>
    // Salary Range Chart
    const salaryRangeCtx = document.getElementById('salaryRangeChart').getContext('2d');
    new Chart(salaryRangeCtx, {
        type: 'bar',
        data: {
            labels: [<% salaryRanges.forEach((range, index) => { %>'<%= range._id %>'<%= index < salaryRanges.length - 1 ? ',' : '' %><% }); %>],
            datasets: [{
                label: 'Number of Employees',
                data: [<% salaryRanges.forEach((range, index) => { %><%= range.count %><%= index < salaryRanges.length - 1 ? ',' : '' %><% }); %>],
                backgroundColor: '#3B82F6'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });
    
    // Department Salary Chart
    const departmentSalaryCtx = document.getElementById('departmentSalaryChart').getContext('2d');
    new Chart(departmentSalaryCtx, {
        type: 'bar',
        data: {
            labels: [<% departmentDistribution.forEach((dept, index) => { %>'<%= dept.name %>'<%= index < departmentDistribution.length - 1 ? ',' : '' %><% }); %>],
            datasets: [{
                label: 'Average Salary',
                data: [<% departmentDistribution.forEach((dept, index) => { %><%= Math.round(dept.avgSalary || 0) %><%= index < departmentDistribution.length - 1 ? ',' : '' %><% }); %>],
                backgroundColor: '#10B981'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });
    
    // Experience Chart
    const experienceCtx = document.getElementById('experienceChart').getContext('2d');
    new Chart(experienceCtx, {
        type: 'doughnut',
        data: {
            labels: [<% experienceStats.forEach((exp, index) => { %>'<%= exp._id %> years'<%= index < experienceStats.length - 1 ? ',' : '' %><% }); %>],
            datasets: [{
                data: [<% experienceStats.forEach((exp, index) => { %><%= exp.count %><%= index < experienceStats.length - 1 ? ',' : '' %><% }); %>],
                backgroundColor: [
                    '#3B82F6', '#10B981', '#F59E0B', '#EF4444', '#8B5CF6',
                    '#06B6D4', '#84CC16', '#F97316', '#EC4899', '#6366F1'
                ]
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });
</script>
